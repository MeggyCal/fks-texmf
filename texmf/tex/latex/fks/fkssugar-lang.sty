% == english typeset ==
\def\fkssug@renglish{%

% part of "" macro -- let's typeset numbers correctly
\mathchardef\carka="013B %thousands separator
\def\jed@A ##1 {\begingroup\def~{\carka}\mathcode`\.="013A\mathcode`\,="013A \begingroup \mathcode`\e="8000 ##1 \jed@B} %decimal dot

%british/american quotation
\ifdefined\uv\renewcommand\uv[1]{``##1''}\fi

% constant
\renewcommand\const{\mathup{const}}

} % end of english typeset

% == czech typeset ==
\def\fkssug@rczech{%

% part of "" macro -- let's typeset numbers correctly
\def\jed@A ##1 {\begingroup\def~{\,}\mathcode`\.="013B\mathcode`\,="013B \begingroup \mathcode`\e="8000 ##1 \jed@B} % decimal comma

%czech quotation
\ifdefined\uv\renewcommand\uv[1]{„##1“}\fi

% constant
\renewcommand\const{\mathup{konst}}

} %end of czech typeset

% == package language options ==
\DeclareOption{english}{%
    \AtBeginDocument{\fkssug@renglish}
}
\DeclareOption{czech}{%
    \AtBeginDocument{\fkssug@rczech}
}
\DeclareOption{slovak}{%
    \AtBeginDocument{\fkssug@rczech}
}
\DeclareOption*{%
    \PackageWarning{examplepackage}{Unknown ‘\CurrentOption’}
}
\ProcessOptions\relax
